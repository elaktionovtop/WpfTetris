<Window x:Class="WpfTetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        KeyDown="Window_KeyDown"
        Title="Тетрис" Height="700" Width="450">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        
        <!-- Игровое поле: 10x20 полей -->
        <Border Padding="8" Background="#111" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="6">
            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="10" Rows="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="28" Height="28" Margin="1" Background="{Binding Color}" BorderBrush="#222" BorderThickness="1"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Score" FontWeight="Bold"/>
            <TextBlock Text="{Binding Score}" FontSize="16" Margin="0,0,0,10"/>

            <Button Content="Pause / Resume" Click="Pause_Click" Margin="0,0,0,5"/>
            <Button Content="New Game" Click="NewGame_Click"/>
        </StackPanel>
    </Grid>
</Window>
